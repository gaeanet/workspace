

object MyApp {

  def main(args:Array[String]) :Unit ={
    //変数
    /*変数*/

    // val 定数 immutable
    // var 変数 mutable

    //val msg:String = "Hello World!"
    var msg = "Hello\tWorld\n"
    msg = "値を変更"

    //整数 Byte Short Int Long

    val i = 5
    val l = 5555555L
    //浮動小数点 Float Double
    var d  = 3253.5
    var f = 234.4F
    //文字列 Char
    var c = 'a'

    //文字列 String
    var v = "Hello"

    //論理値 Boolean
    var flg = true //false

    //特殊文字 \n:改行　\t


    println(msg)
  }

}